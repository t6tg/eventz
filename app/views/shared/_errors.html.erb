  <% if object.errors.any? %>
  <section class="errors">
    <h2>Oops! Your form could not be saved.</h1>
    <h3>Please correct the following <%= pluralize(object.errors.count, "error") %> </h2>
    <ul>
      <% object.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
